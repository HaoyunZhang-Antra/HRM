@model ApplicationCore.Models.SubmissionRequestModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div>
    
    <h4>
        JobId: @ViewBag.Job.Id
        JobTitle: @ViewBag.Job.Title
    </h4>

</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="JobId" class="control-label"></label>
                <input asp-for="JobId" class="form-control" />
                <span asp-validation-for="JobId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CandidateId" class="control-label"></label>
                <input asp-for="CandidateId" class="form-control" />
                <span asp-validation-for="CandidateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubmittedOn" class="control-label"></label>
                <input asp-for="SubmittedOn" class="form-control" />
                <span asp-validation-for="SubmittedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedForInterview" class="control-label"></label>
                <input asp-for="SelectedForInterview" class="form-control" />
                <span asp-validation-for="SelectedForInterview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RejectedOn" class="control-label"></label>
                <input asp-for="RejectedOn" class="form-control" />
                <span asp-validation-for="RejectedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RejectedReason" class="control-label"></label>
                <input asp-for="RejectedReason" class="form-control" />
                <span asp-validation-for="RejectedReason" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Apply" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
